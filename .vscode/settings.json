{
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[yaml]": {
    "editor.formatOnSave": true, // optional, formats YAML on save
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  "deno.enable": true,
  "deno.lint": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "yaml.format.enable": true
}
